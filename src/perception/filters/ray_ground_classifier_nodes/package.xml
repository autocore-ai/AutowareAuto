<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
    <name>ray_ground_classifier_nodes</name>
    <version>1.0.0</version>
    <description>Boilerplate ROS 2 node wrappers around ray_ground_classifier</description>
    <maintainer email="opensource@apex.ai">Apex.AI, Inc.</maintainer>
    <license>Apache License 2.0</license>

    <buildtool_depend>ament_cmake</buildtool_depend>
    <buildtool_depend>ament_cmake_auto</buildtool_depend>
    <buildtool_depend>autoware_auto_cmake</buildtool_depend>

    <depend>autoware_auto_common</depend>
    <depend>point_cloud_msg_wrapper</depend>
    <depend>ray_ground_classifier</depend>
    <depend>rclcpp</depend>
    <depend>rclcpp_components</depend>
    <depend>sensor_msgs</depend>

    <exec_depend>ament_index_python</exec_depend>
    
    <test_depend>ament_index_python</test_depend>
    <test_depend>ament_lint_auto</test_depend>
    <test_depend>ament_lint_common</test_depend>
    <test_depend>lidar_integration</test_depend>
    <test_depend>ament_cmake_gtest</test_depend>
    <test_depend>ros_testing</test_depend>

    <export>
        <build_type>ament_cmake</build_type>
    </export>
</package>
