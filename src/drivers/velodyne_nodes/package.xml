<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
    <name>velodyne_nodes</name>
    <version>1.0.0</version>
    <description>(Mostly) static memory implementation of a velodyne driver in one process</description>
    <maintainer email="opensource@apex.ai">Apex.AI, Inc.</maintainer>
    <license>Apache License 2.0</license>

    <buildtool_depend>ament_cmake</buildtool_depend>
    <buildtool_depend>autoware_auto_cmake</buildtool_depend>

    <build_depend>lidar_utils</build_depend>
    <build_depend>sensor_msgs</build_depend>
    <build_depend>velodyne_driver</build_depend>

    <depend>autoware_auto_common</depend>
    <depend>rclcpp</depend>
    <depend>udp_driver</depend>

    <exec_depend>ament_index_python</exec_depend>
    <exec_depend>lidar_utils</exec_depend>
    <exec_depend>sensor_msgs</exec_depend>
    <exec_depend>velodyne_driver</exec_depend>

    <test_depend>ament_cmake_gtest</test_depend>
    <test_depend>ament_index_python</test_depend>
    <test_depend>ament_lint_auto</test_depend>
    <test_depend>ament_lint_common</test_depend>
    <test_depend>lidar_integration</test_depend>
    <test_depend>ros_testing</test_depend>

    <export><build_type>ament_cmake</build_type></export>
</package>
