<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format2.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="2">
  <name>controller_common_nodes</name>
  <version>1.0.0</version>
  <description>
    A base node which expresses basic behavior controllers. Intended to ease development and
    integration of vehicle motion controllers.
  </description>
  <maintainer email="christopherj.ho@gmail.com">Christopher Ho</maintainer>
  <license>Apache License 2.0</license>

  <buildtool_depend>ament_cmake_auto</buildtool_depend>
  <buildtool_depend>autoware_auto_cmake</buildtool_depend>

  <depend>autoware_auto_msgs</depend>
  <depend>controller_common</depend>
  <depend>autocore_node</depend>
  <depend>tf2</depend>
  <depend>tf2_msgs</depend>
  <depend>motion_model</depend>
  <depend>state_vector</depend>

  <build_depend>motion_common</build_depend>
  <build_depend>time_utils</build_depend>

  <build_depend>motion_testing</build_depend>
  <build_depend>motion_testing_nodes</build_depend>
  <test_depend>ament_cmake_gtest</test_depend>
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export><build_type>ament_cmake</build_type></export>
</package>
